<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

   <EditText
        android:id="@+id/editTextUserNameInLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnEnterInLogin"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnEnterInLogin"
        android:layout_margin="4dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_default_bg"
        android:drawableRight="@drawable/username"
        android:ems="10"
        android:hint="@string/UserName"
        android:padding="10dp"
        android:gravity="right|center_vertical"
        android:inputType="number"
        android:textSize="14sp"
        android:textColorHint="#FFFFFF" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextPassInLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextUserNameInLogin"
        android:layout_alignRight="@+id/editTextUserNameInLogin"
        android:layout_below="@+id/editTextUserNameInLogin"
        android:background="@drawable/edittext_bottom_bg"
        android:drawableRight="@drawable/key"
        android:ems="10"
        android:gravity="right|center_vertical"
        android:hint="@string/Password"
        android:padding="10dp"
        android:paddingRight="25dp"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/btnEnterInLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassInLogin"
        android:background="@drawable/button_default_bg"
        android:onClick="EnterApp"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:text="@string/EnterInto"
        android:textColor="#000000" />

</RelativeLayout>
