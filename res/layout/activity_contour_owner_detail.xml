<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ContourOwnerDetail" >

     <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:background="@drawable/border_gridview"
         android:scrollbars="vertical"
         android:verticalScrollbarPosition="left" >

         
          <TextView
             android:id="@+id/txtSubscriptionName"
             android:layout_width="100dp"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
             android:text="مشترک محترم : " />

         <TextView
             android:id="@+id/txtSubscriptionLastNameValue"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/txtSubscriptionFirstNameValue"
             android:layout_alignBottom="@+id/txtSubscriptionFirstNameValue"
             android:layout_marginRight="5dp"
             android:layout_toLeftOf="@+id/txtSubscriptionFirstNameValue"
             android:textSize="22sp"
             android:text="TextView" />

         <TextView
             android:id="@+id/txtMobile"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/txtNationalCode"
             android:layout_alignRight="@+id/txtNationalCode"
             android:layout_below="@+id/txtNationalCodeValue"
             android:layout_marginTop="15pt"
             android:text="تلفن همراه : " />

         <TextView
             android:id="@+id/txtNationalCode"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/txtSubscriptionName"
             android:layout_alignRight="@+id/txtSubscriptionName"
             android:layout_below="@+id/txtSubscriptionFirstNameValue"
             android:layout_marginTop="23pt"
             android:text="کد ملی : " />

         <TextView
             android:id="@+id/txtSubscriptionFirstNameValue"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignRight="@+id/txtSubscriptionName"
             android:layout_below="@+id/txtSubscriptionName"
             android:layout_marginRight="20dp"
             android:layout_marginTop="10pt"
             android:text="TextView"
             android:textSize="22sp" />

         <TextView
             android:id="@+id/txtNationalCodeValue"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/txtNationalCode"
             android:layout_toLeftOf="@+id/txtNationalCode"
             android:text="TextView"
             android:textSize="18sp" />

         <TextView
             android:id="@+id/txtMobileValue"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/txtMobile"
             android:layout_alignBottom="@+id/txtMobile"
             android:layout_toLeftOf="@+id/txtMobile"
             android:text="TextView"
             android:textSize="18sp" />

         <TextView
             android:id="@+id/txtPhone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/txtMobile"
             android:layout_alignRight="@+id/txtMobile"
             android:layout_below="@+id/txtMobileValue"
             android:layout_marginTop="15pt"
             android:text="تلفن ثابت : " />

         <TextView
             android:id="@+id/txtPhoneValue"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/txtPhone"
             android:layout_alignRight="@+id/txtMobileValue"
             android:textSize="18sp"
             android:text="TextView" />

         <TextView
             android:id="@+id/txtAddressValue"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/txtAddress"
             android:layout_alignBottom="@+id/txtAddress"
             android:layout_alignRight="@+id/txtPhoneValue"
             android:textSize="18sp"
             android:singleLine="false"
             android:maxLines="4"
             android:ellipsize="end"
             android:text="TextView" />

         <TextView
             android:id="@+id/textblank"
             android:layout_width="fill_parent"
             android:layout_height="15dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentRight="true"
             android:layout_below="@+id/txtAddressValue"
             android:layout_marginTop="15dp"
             android:layout_marginBottom="15dp"
             android:text="      " />

         <TextView
             android:id="@+id/txtAddress"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/txtPhone"
             android:layout_alignRight="@+id/txtPhone"
             android:layout_below="@+id/txtPhone"
             android:layout_marginTop="15pt"
             android:text="آدرس : " />
      
     </RelativeLayout>

</RelativeLayout>
